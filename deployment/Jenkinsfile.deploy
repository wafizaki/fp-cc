pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/wafizaki/fp-cc.git', branch: 'main'
      }
    }
    stage('Build') {
      steps {
        sh 'go mod download'
        sh 'go build -o main'
      }
    }
    stage('Deploy') {
      steps {
        sh 'pkill main || true'
        sh 'nohup ./main &'
     
      }
    }
  }
}